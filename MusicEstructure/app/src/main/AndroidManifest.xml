<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicestructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FindMusicActivity" android:label="@string/title_activity_findmusic"/>
        <activity android:name=".ListeningToActivity" android:label="@string/title_activity_listeningto"/>
        <activity android:name=".FavoritesActivity" android:label="@string/title_activity_favorites"/>
        <activity android:name=".HistoryActivity" android:label="@string/title_activity_historymusic"/>
        <activity android:name=".CollectionActivity" android:label="@string/title_activity_collection" />
        <activity android:name=".PaymentActivity" android:label="@string/title_activity_payment"></activity>
        <!-- Enables the Android Pay API -->
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
    </application>

</manifest>