<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="searchView">
        <item name="android:layout_width">@dimen/search_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/title_form</item>
    </style>

    <style name="subtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/subtitle_margin_left</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="authorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:layout_marginLeft">@dimen/subtitle_margin_left</item>
    </style>

</resources>
