<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="QuestionTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/heightSizeQuestion</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textSizeQuestion</item>
    </style>

    <style name="AnswerTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeAnswer</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">@dimen/widthSizeEdit</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:textSize">@dimen/textSizeEdit</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TitleTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/title_color</item>
    </style>


</resources>
